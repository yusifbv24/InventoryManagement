@model List<RouteViewModel>
@{
    ViewData["Title"] = "Transfer Timeline";
    var productId = ViewBag.ProductId;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Transfer Timeline</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Timeline</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow">
                <!-- In the card-header section -->
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-history me-1"></i>
                            Product Transfer History
                        </div>
                        <!-- Add this button -->
                        <button class="btn btn-outline-secondary btn-sm" onclick="exportTimelineToPDF()">
                            <i class="fas fa-file-pdf"></i> Export PDF
                        </button>
                    </div>
                </div>
            </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="timeline">
                            @foreach (var route in Model.OrderByDescending(r => r.CreatedAt))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker">
                                        @if (route.IsCompleted)
                                        {
                                            <i class="fas fa-check-circle text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-clock text-warning"></i>
                                        }
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">
                                            @route.RouteTypeName
                                            <small class="text-muted float-end">
                                                @route.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                            </small>
                                        </h6>
                                        <p class="mb-2">
                                            @if (route.FromDepartmentName != null)
                                            {
                                                <span>From: <strong>@route.FromDepartmentName</strong>
                                                    @if (!string.IsNullOrEmpty(route.FromWorker))
                                                    {
                                                        <span>(@route.FromWorker)</span>
                                                    }
                                                </span >
                                                <br />
                                            }
                                        <span>
                                            To: <strong>@route.ToDepartmentName</strong>
                                                @if (!string.IsNullOrEmpty(route.ToWorker))
                                                {
                                                    <span>(@route.ToWorker)</span>
                                                }
                                        </span>
                                        </p>
                                        @if (!string.IsNullOrEmpty(route.Notes))
                                        {
                                            <p class="text-muted mb-2">
                                                <i class="fas fa-sticky-note"></i> @route.Notes
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(route.FullImageUrl))
                                        {
                                            <img src="@route.FullImageUrl"
                                                 class="img-thumbnail timeline-image-zoom"
                                                 style="max-width: 150px; cursor: pointer;"
                                             onclick="showImageModal('@route.FullImageUrl', 'Transfer Image')" />
                                        }
                                        @if (route.IsCompleted)
                                        {
                                            <div class="mt-2">
                                                <span class="badge bg-success">
                                                    Completed: @route.CompletedAt?.ToString("MMM dd, yyyy HH:mm")
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted"></i>
                            <p class="mt-3 text-muted">No transfer history available for this product.</p>
                        </div>
                    }
                </div>
            </div>
        <div class="col-lg-4">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-chart-line me-1"></i>
                    Statistics
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Total Transfers:</strong> @Model.Count
                        </li>
                        <li class="mb-2">
                            <strong>Completed:</strong> @Model.Count(r => r.IsCompleted)
                        </li>
                        <li class="mb-2">
                            <strong>Pending:</strong> @Model.Count(r => !r.IsCompleted)
                        </li>
                        @if (Model.Any())
                        {
                            <li class="mb-2">
                                <strong>First Transfer:</strong> @Model.Min(r => r.CreatedAt).ToString("MMM dd, yyyy")
                            </li>
                            <li class="mb-2">
                                <strong>Last Transfer:</strong> @Model.Max(r => r.CreatedAt).ToString("MMM dd, yyyy")
                            </li>
                        }
                    </ul>

                    <hr />

                    <div class="d-grid">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@productId" class="btn btn-outline-primary">
                            <i class="fas fa-box"></i> View Product
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </div>

@section Scripts {
    <script src="~/js/pdf-export.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Make timeline images clickable
            $('.timeline-content img').on('click', function() {
                const imageUrl = $(this).attr('src');
                showImageModal(imageUrl, 'Transfer Image');
            });
        });

        function showImageModal(imageUrl, title) {
            // Use the global image modal from _Layout
            $('#globalModalImage').attr('src', imageUrl);
            $('#globalImageModal .modal-title').text(title || 'Image Preview');
            $('#globalImageModal').modal('show');
        }
        }
    </script>
}